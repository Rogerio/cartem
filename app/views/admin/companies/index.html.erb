<% model_class = Company %>

<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize %></h2>
</div>

<table class="table table-striped">
	<thead>
  	<tr>
	    <th><%= model_class.human_attribute_name(:name) %></th>
	    <th><%= model_class.human_attribute_name(:address) %></th>
	    <th><%= model_class.human_attribute_name(:website) %></th>
	    <th><%= model_class.human_attribute_name(:email) %></th>
	    <th><%= model_class.human_attribute_name(:created_at) %></th>
	    <th><%=t '.actions', :default => t("helpers.actions") %></th>
	  </tr>
	</thead>
<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.address %></td>
    <td><%= company.website %></td>
    <td><%= company.email %></td>
		<td><%= company.category.created_at %></td>
    <td><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_company_path(company), :class => 'btn btn-mini' %></td>
    <td><%= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_company_path(company), :method => :delete,          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },            :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Adicionar', new_admin_company_path, :class => "btn btn-primary" %>
