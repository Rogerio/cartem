<%= form_for ["admin", @company] do |f| %>

  <div class="control-group">
		<%= f.label :name %>
		<div class="controls">
    	<%= f.text_field :name, :class => 'input-xxlarge' %>
  	</div>
	</div>
  <div class="control-group">
    <%= f.label :address %>
		<div class="controls">
    	<%= f.text_area :address, :class => "span6" %>
  	</div>
	</div>
  <div class="control-group">
    <%= f.label :website %>
		<div class="controls">
    	<%= f.text_field :website, :class => 'input-xxlarge' %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :email %>
		<div class="controls">
    	<%= f.text_field :email, :class => 'input-xxlarge' %>			
		</div>
  </div>

	<div class="control-group">
		<%= f.label :description %>
		<div class="controls">
    	<%= f.text_area :description, :class => "span6" %>
		</div>
  </div>

	<div class="control-group">
		<%= f.label :category, :class => 'control-label' %>
		<div class="controls">
		  <%= f.collection_select(:category_id, @categories, :id, :name, {:prompt => true}, :multiple => "multiple") %>
		</div>
	</div>

	<br/>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
		<%= link_to 'Back', admin_companies_path, :class => "btn" %>
  </div>
<% end %>
