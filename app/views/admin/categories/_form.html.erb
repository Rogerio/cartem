<%= form_for ["admin", @category] do |f| %>

	<%= error_messages_for @category %>

	<div class="control-group">
		<%= f.label :parent_id %>
		<div class="controls">
			<%= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, {:prompt => true} %>			
		</div>
	</div>
	<div class="control-group">
    <%= f.label :name %>
		<div class="controls"></div>
    <%= f.text_field :name %>
  </div>



  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
		<%= link_to 'Back', admin_categories_path, :class => "btn" %>
  </div>
<% end %>
