<% model_class = Category %>

<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize %></h2>
</div>

<table class="table table-striped">
  <thead>
		<tr>
	    <th><%= model_class.human_attribute_name(:name) %></th>
	    <th><%=t '.actions', :default => t("helpers.actions") %></th>
	  </tr>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
			<tr>
		    <td><%= link_to category.name, admin_category_path(category) %></td>
		    <td><%= link_to 'Edit', edit_admin_category_path(category), :class => "btn btn-mini" %> <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %></td>
		  </tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New Category', new_admin_category_path, :class => "btn btn-primary" %>
